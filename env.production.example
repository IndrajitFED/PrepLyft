# =============================================================================
# Interview Booking Project - Production Environment Variables
# =============================================================================
# Copy this file to .env and update the values for production

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://yourdomain.com

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/interview-booking?retryWrites=true&w=majority

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=https://api.yourdomain.com/api
VITE_APP_NAME=MockAce
VITE_APP_VERSION=1.0.0

# =============================================================================
# Payment Gateway (Razorpay)
# =============================================================================
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# Google Services
# =============================================================================
# Google Calendar API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/mentor-calendar/callback
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_ACCESS_TOKEN=your-access-token

# Google Service Account (Alternative)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=MockAce Team

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# File Storage
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# =============================================================================
# Monitoring & Logging
# =============================================================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
LOG_LEVEL=warn
LOG_FORMAT=combined

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# Docker Configuration
# =============================================================================
MONGO_ROOT_PASSWORD=your-mongo-root-password
MONGO_USERNAME=interview-booking-user
MONGO_PASSWORD=your-mongo-password
REDIS_PASSWORD=your-redis-password
GRAFANA_PASSWORD=your-grafana-password

# =============================================================================
# Production Optimizations
# =============================================================================
COMPRESS_ENABLED=true
HELMET_ENABLED=true
DB_POOL_SIZE=10
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# Third-party Integrations
# =============================================================================
SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_GOOGLE_MEET=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_FILE_UPLOAD=true
ENABLE_MONITORING=true

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
TRUST_PROXY=true
