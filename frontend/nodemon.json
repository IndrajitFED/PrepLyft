{
  "watch": ["src", "package.json", "vite.config.ts", "tailwind.config.js", "tsconfig.json"],
  "ext": "ts,tsx,js,jsx,json,css,html",
  "ignore": [
    "src/**/*.spec.ts", 
    "src/**/*.test.ts", 
    "dist/**/*", 
    "node_modules/**/*",
    "*.log"
  ],
  "exec": "npm run dev",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500,
  "verbose": true,
  "restartable": "rs",
  "colours": true
}
